<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

    <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item><!-- shows error because min sdk is 23 but still compiles. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Actually burger menu icon but I don't get a choice of name unfortunately -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>

        
        
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">

    <item name="switchStyle">@android:color/holo_red_light</item>
</style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextColor" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>


    </style>




</resources>
