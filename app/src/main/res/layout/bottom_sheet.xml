<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:src="@drawable/ic_arrow_upward_white_24dp" />

        <ImageView
            android:elevation="11dp"
            android:id="@+id/imageViewFire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp"
            android:src="@drawable/ic_fireicon_bottomsheet" />

        <ImageView
            android:id="@+id/imageViewCloud"
            android:elevation="11dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp"
            android:src="@drawable/ic_cloudicon_bottomsheet" />


    </LinearLayout>


<FrameLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    >

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewFireLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:src="@drawable/ic_fireicon_bottomsheet"
            app:layout_constraintBottom_toTopOf="@+id/imageViewCloudLegend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRE"
            android:textColor="@color/colorAccent"
            android:textSize="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewFireLegend"
            app:layout_constraintTop_toTopOf="@+id/imageViewFireLegend" />

        <ImageView
            android:id="@+id/imageViewCloudLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:src="@drawable/ic_cloudicon_bottomsheet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFireLegend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIR QUALITY"
            android:textColor="@color/colorAccent"
            android:textSize="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCloudLegend"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


    </androidx.constraintlayout.motion.widget.MotionLayout>

</FrameLayout>



</LinearLayout>